@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/login1.css">
<link rel="stylesheet" href="~/css/login2.css">
<link rel="stylesheet" href="~/css/login3.css">
<link rel="stylesheet" href="~/css/login4.css">
<link rel="stylesheet" href="~/css/login5.css">
<link rel="stylesheet" href="~/css/login6.css">
<link rel="stylesheet" href="~/css/login7.css">
<link rel="stylesheet" href="~/css/login8.css">
<link rel="stylesheet" href="~/css/login9.css">
<link rel="stylesheet" href="~/css/login10.css">
<link rel="stylesheet" href="~/css/login11.css">
<header>
    <div class="jumbotron color-grey-light mt-70">
        <div class="d-flex align-items-center h-100">
            <div class="container text-center py-5">
                <h3 class="mb-0">Sign up</h3>
            </div>
        </div>
    </div>
</header>

<!--Main Navigation-->
<!--Main layout-->
<main>
    <section class="login_part py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>Already Have Account?</h2>
                            <p>
                                There are advances being made in science and technology
                                everyday, and a good example of this is the
                            </p>
                            <a href="/Account/Register" class="btn_3">Login</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>
                                Welcome! <br>
                                Please Register Now!
                            </h3>
                            <form asp-controller="Account" asp-action="Register" method="POST">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-6 form-group p_star py-2">
                                    <input asp-for="FirstName" type="text" id="name" class="form-control" placeholder="Firstname">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-5 form-group p_star py-2">
                                    <input asp-for="LastName" type="text" id="name" class="form-control" placeholder="Lastname">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group p_star py-2">
                                    <input asp-for="UserName" id="name" class="form-control" placeholder="Username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group p_star py-2">
                                    <input asp-for="Email" type="email" id="name" class="form-control" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group p_star py-2">
                                    <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                                        At least 6 characters and 1 digit
                                    </small>
                                </div>
                                <div class="col-md-12 form-group p_star py-2">
                                    <input asp-for="RePassword" type="password" id="password" class="form-control" placeholder="Repassword">
                                    <span asp-validation-for="RePassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <button type="submit" class="btn_3">
                                        Register
                                    </button>
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="~/js/login1.js"></script>
<script src="~/js/login2.js"></script>
<script src="~/js/login3.js"></script>
<script src="~/js/login4.js"></script>
<script src="~/js/login5.js"></script>
<script src="~/js/login6.js"></script>

