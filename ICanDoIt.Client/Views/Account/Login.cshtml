@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["message"] != null)
{
    var message = JsonConvert.DeserializeObject<AlertMessage>(TempData["message"] as string);
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-@message.AlertType">
                @message.Message
            </div>
        </div>
    </div>
}
<link rel="stylesheet" href="~/css/login1.css">
<link rel="stylesheet" href="~/css/login2.css">
<link rel="stylesheet" href="~/css/login3.css">
<link rel="stylesheet" href="~/css/login4.css">
<link rel="stylesheet" href="~/css/login5.css">
<link rel="stylesheet" href="~/css/login6.css">
<link rel="stylesheet" href="~/css/login7.css">
<link rel="stylesheet" href="~/css/login8.css">
<link rel="stylesheet" href="~/css/login9.css">
<link rel="stylesheet" href="~/css/login10.css">
<link rel="stylesheet" href="~/css/login11.css">

<div class="jumbotron color-grey-light mt-70">
    <div class="d-flex align-items-center h-100">
        <div class="container text-center py-5">
            <h3 class="mb-0">Sign in</h3>
        </div>
    </div>
</div>

<main>
    <!--================login_part Area =================-->
    <section class="login_part py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>
                                There are advances being made in science and technology
                                everyday, and a good example of this is the
                            </p>
                            <a href="/Account/Register" class="btn_3">Create an Account</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>
                                Welcome Back ! <br>
                                Please Sign in now
                            </h3>
                            <form asp-controller="Account" asp-action="Login" method="POST" class="row contact_form">
                                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="Email" type="email" id="name" class="form-control"
                                           placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input asp-for="Password" type="password" id="password" class="form-control"
                                           placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <button type="submit" class="btn_3">
                                        log in
                                    </button>
                                    <a class="lost_pass" href="/Account/ForgotPassword">forget password?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================login_part end =================-->
</main>

<script src="~/js/login1.js"></script>
<script src="~/js/login2.js"></script>
<script src="~/js/login3.js"></script>
<script src="~/js/login4.js"></script>
<script src="~/js/login5.js"></script>
<script src="~/js/login6.js"></script>





