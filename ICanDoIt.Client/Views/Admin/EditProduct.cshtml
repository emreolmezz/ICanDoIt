@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@await Html.PartialAsync("_AdminNavbar")
@await Html.PartialAsync("_AdminSideBar")

<div class="content-wrapper container">
    <h1 class="h3">Edit Product</h1>
    <hr>



    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="EditProduct" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Url">
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="Description" id="editör"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="productImages" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="productImages">
                        <input class="form-control" type="file" name="files" multiple="multiple">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="isStock" class="col-sm-2 col-form-label">
                        <input class="checkbox" asp-for="isStock" />
                        @Html.DisplayNameFor(model => model.isStock)
                    </label>
                </div>
                <div class="form-group row">
                    <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.categories,"Id","Name"))">
                    </select>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Product</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-3.3.1.min.js"><\/script>')</script>

<script src="/Trumbowyg-main/dist/trumbowyg.min.js"></script>
<link href="~/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<script src="~/Trumbowyg-main/dist/plugins/resizimg/trumbowyg.resizimg.min.js"></script>
<script src="~/Trumbowyg-main/jquery-resizable-master/dist/jquery-resizable.min.js"></script>
<script>

    $('#editör').trumbowyg({
        plugins: {
            resizimg: {
                minSize: 64,
                step: 16,
            }
        }
    });
</script>

