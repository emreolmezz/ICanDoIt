@model RoleModel
@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@await Html.PartialAsync("_AdminNavbar")
@await Html.PartialAsync("_AdminSideBar")

<div class="content-wrapper container">
    <h1 class="h3">Create Role</h1>
    <hr>



    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="RoleCreate" method="POST" enctype="multipart/form-data">
                <div class="form-group row">
                    <label asp-for="roleName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="roleName">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Role</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

